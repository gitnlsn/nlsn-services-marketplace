# Example environment file for services marketplace
# Copy this file to .env and fill in your actual values

# ========================================
# CRITICAL SERVICES (Required)
# ========================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/marketplace"

# NextAuth.js Configuration (Google OAuth)
AUTH_SECRET="your-nextauth-secret-here-generate-with-openssl"
AUTH_GOOGLE_ID="your-google-oauth-client-id"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# Payment Gateway (Pagarme)
PAGARME_SECRET_KEY="your-pagarme-secret-key"
PAGARME_PUBLIC_KEY="your-pagarme-public-key"

# ========================================
# OPTIONAL SERVICES
# ========================================

# Cloud Storage (Google Drive Integration)
# Uses same OAuth credentials as AUTH_GOOGLE_ID/AUTH_GOOGLE_SECRET
# Setup: Enable Google Drive API in Google Cloud Console

# Communication Services
# Twilio (SMS/WhatsApp - Optional for future use)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_NUMBER="whatsapp:+1234567890"

# Email Services (Choose one)
# Resend (Recommended for transactional emails)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM="noreply@yourdomain.com"

# SendGrid (Alternative email provider)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM="noreply@yourdomain.com"

# SMTP (Generic email provider)
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@yourdomain.com"

# Maps and Geocoding
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GEOCODING_PROVIDER="openstreetmap"

# Application Settings
NODE_ENV="development"